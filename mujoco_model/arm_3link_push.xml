<mujoco model="arm3d">
    <compiler inertiafromgeom="true" angle="radian" coordinate="local" />
    <option timestep="0.01" gravity="0 0 0" iterations="20" integrator="Euler" />
    
    <default>
        <joint armature='0.04' damping="1" limited="true"/>
        <geom friction=".8 .1 .1" density="300" margin="0.002" condim="1" contype="1" conaffinity="1"/>
    </default>
    
    <worldbody>
        <body name="palm" pos="2 1 0">
            <geom name="shoulder1"  type="capsule" fromto="-0.1 0 0 0.1 0 0" size="0.12"/>
            <body name="proximal_1" pos="0 0 0">
                <geom name="capsuleproximal"  type="capsule"  fromto="0 0 0 0 0.8 0" size="0.1" contype="1" conaffinity="1"/>
                <joint name="proximal_j_2" type="hinge" pos="0 0 0" axis="0 0 1" range="-0.75 .75" damping="1.0" />
                <joint name="proximal_j_1" type="hinge" pos="0 0 0" axis="1 0 0" range="-0.9 1.0" damping="1.0" />
                <body name="distal_1" pos="0 0.8 0">
                    <joint name="distal_j_1" type="hinge" pos="0 0 0" axis="1 0 0" range="-1. 0" damping="1.0"/>
                    <geom name="capsuledistal" type="capsule"  fromto="0 0 0 0 0.4 0" size="0.08" contype="1" conaffinity="1"/>
                 </body>
              </body>
        </body>
        <body name="palm_2" pos="0. 3.0 0.">
            <geom name="shoulder2"  type="capsule" fromto="-0.1 0 0 0.1 0 0" size="0.12"/>
            <body name="proximal_1_2" pos="0 0 0">
                <geom name="capsuleproximal_2"  type="capsule"  fromto="0 0 0 0 -0.8 0" size="0.1" contype="1" conaffinity="1"/>
                <joint name="proximal_j_2_2" type="hinge" pos="0 0 0" axis="0 0 1" range="-0.75 .75" damping="1.0" />
                <joint name="proximal_j_1_2" type="hinge" pos="0 0 0" axis="1 0 0" range="-0.9 1.0" damping="1.0" />
                <body name="distal_1_2" pos="0 -.8 0">
                    <joint name="distal_j_1_2" type="hinge" pos="0 0 0" axis="1 0 0" range="0. 1." damping="1.0"/>
                    <geom name="capsuledistal_2" type="capsule"  fromto="0 0 0 0 -0.4 0" size="0.08" contype="1" conaffinity="1"/>
                </body>
            </body>
         </body>
          <geom name="planetable" rgba="0. 0. 1. 1" type="plane" pos="0 2 -0.6"  size="2 2 .1" density="100" contype="1" condim="1" conaffinity="1"/>
        <!--
        <body name="object" pos="0.1 .7 -0.5">
            <geom name="redobject" rgba="1. 0. 0. 1" type="box" size="0.1 0.3 0.1" density='0.00001' contype="1" conaffinity="1"/>
            <joint name="obj_slidex" type="slide" pos="0 0 0" axis="1 0 0" range="-10.3213 10.3" damping="0.5"/>
            <joint name="obj_slidey" type="slide" pos="0 0 0" axis="0 1 0" range="-10.3213 10.3" damping="0.5"/>
            <joint name="obj_slidez" type="slide" pos="0 0 0" axis="0 0 1" range="-10.3213 10.3" damping="0.5" />
        </body>
        -->
    </worldbody>
    
    
    <actuator>
        <motor joint="proximal_j_1" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="proximal_j_2" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="distal_j_1" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="proximal_j_1_2" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="proximal_j_2_2" ctrlrange="-2 2" ctrllimited="true"/>
        <motor joint="distal_j_1_2" ctrlrange="-2 2" ctrllimited="true"/>
    </actuator>
</mujoco>
